<div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://s4.static.brasilescola.uol.com.br/be/2024/01/sala-de-cinema-cheia-de-pessoas-um-reflexo-da-popularizacao-do-cinema-parte-importante-de-sua-historia.jpg)">
  <h1> <strong> Save any kind of movie </strong> </h1>

</div>

<div class="container mt-4 col-10">
  <div class="mt-4">
    <div class="d-flex flex-row-reverse bd-highlight">
      <%= link_to 'Create a movie list', new_list_path, class: "white btn btn-success p-2 bd-highlight"%>
    </div>
    <h1 class="h1-style mb-4">My lists</h1>
    <ul>
      <% @lists.each do |list| %>
        <div class="cards">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">
            <%= link_to list.name, list_path(list) %>
        </div>
      <% end %>
    </ul>
  </div>
</div>
